<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.manageplan.overviewplan.planmanage.PlanManageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp30"
            android:layout_margin="10dp"
            android:alpha="0.5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgShowDialogMember"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@mipmap/memberfilter"
                android:tint="@color/colorBackGround" />

            <ImageView
                android:layout_marginLeft="@dimen/dp30"
                android:id="@+id/imgChooseTimeEndVote"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/calendar"
                android:tint="@color/colorBackGround" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/txtTimeDown"
                android:textColor="@color/colorBackGround"
                android:layout_marginLeft="@dimen/dp10"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                />


        </LinearLayout>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:clipToPadding="false"
            android:foregroundGravity="center"
            android:overScrollMode="never" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:alpha="0.5">

        <ImageView
            android:id="@+id/imgAddPlan"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@mipmap/addicon" />
    </LinearLayout>

</FrameLayout>