<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lnlRowActivityOfDay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp10"
                android:background="@drawable/shaperecycleviewwhite"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/dp100"
                            android:layout_margin="5dp"
                            android:layout_weight="3"
                            android:background="@color/colorBackGround"
                            android:orientation="vertical"
                            android:weightSum="10">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="7"
                                app:cardCornerRadius="2dp">

                                <ImageView
                                    android:id="@+id/imgPlaceStartActivity"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/txtActivityTimeStart"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:background="@color/colorBackGround"
                                android:gravity="center"
                                android:text="11:00"
                                android:textColor="@color/colorWhite" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="7">

                            <TextView
                                android:id="@+id/txtAcitivityStartPlaceName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="cdscccsdcsd"
                                android:textColor="@color/colorBackGround" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnlNamePlaceEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp10">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@mipmap/down" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnlImgPlaceEnd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp"
                            android:layout_weight="3"
                            android:background="@color/colorBackGround"
                            android:orientation="vertical"
                            android:weightSum="10">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="7"
                                app:cardCornerRadius="2dp">

                                <ImageView
                                    android:id="@+id/imgPlaceEndActivity"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY" />
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/txtTimeActivityEnd"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:background="@color/colorBackGround"
                                android:gravity="center"
                                android:text="11:00"
                                android:textColor="@color/colorWhite" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="7">

                            <TextView
                                android:id="@+id/txtAcitivityEndPlaceName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="cdscccsdcsd"
                                android:textColor="@color/colorBackGround" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtIsTooFar"
                        android:layout_gravity="center"
                        android:text="Is Too Far"
                        android:textStyle="bold"
                        android:textColor="@color/colorYellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>



                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_weight="2">

                    <LinearLayout
                        android:id="@+id/lnlEditActivity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imgDeleteActivity"
                                android:layout_width="@dimen/dp50"
                                android:layout_height="25dp"
                                android:layout_gravity="top|center|right"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="15dp"
                                android:src="@mipmap/deleteactivity" />

                            <ImageView
                                android:id="@+id/imgEditActivity"
                                android:layout_width="@dimen/dp50"
                                android:layout_height="@dimen/dp20"
                                android:layout_gravity="bottom|center|right"
                                android:layout_marginBottom="5dp"
                                android:src="@mipmap/edit" />
                        </FrameLayout>


                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imgEditDocumentActivity"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="@dimen/dp20"
                        android:layout_gravity="bottom|center|right"
                        android:layout_marginBottom="5dp"
                        android:src="@mipmap/edit" />
                </FrameLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/lnlPrintTodolist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtTodolist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="To do list"
                        android:textColor="@color/colorBackGround"
                        android:textSize="@dimen/dp12" />

                    <ImageView
                        android:id="@+id/imgUp"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="18dp"
                        android:layout_gravity="right"
                        android:src="@mipmap/downtodo" />

                    <ImageView
                        android:id="@+id/imgDown"
                        android:layout_width="@dimen/dp50"
                        android:layout_height="18dp"
                        android:layout_gravity="right"
                        android:src="@mipmap/up" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvTaskInActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/shaperecycleviewwhite">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>